{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "apitestfactory"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/RESTToRawLake')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"activities": [
					{
						"name": "CopyRESTToRawLake",
						"type": "Copy",
						"dependsOn": [],
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [],
						"typeProperties": {
							"source": {
								"type": "RestSource",
								"httpRequestTimeout": "00:01:40",
								"requestInterval": "00.00:00:00.010",
								"requestMethod": "GET"
							},
							"sink": {
								"type": "JsonSink",
								"storeSettings": {
									"type": "AzureBlobFSWriteSettings"
								},
								"formatSettings": {
									"type": "JsonWriteSettings",
									"quoteAllText": true
								}
							},
							"enableStaging": false
						},
						"inputs": [
							{
								"referenceName": "RESTAnon",
								"type": "DatasetReference",
								"parameters": {
									"BaseUrl": {
										"value": "@pipeline().parameters.BaseUrl",
										"type": "Expression"
									},
									"RelativeUrl": {
										"value": "@pipeline().parameters.RelativeUrl",
										"type": "Expression"
									}
								}
							}
						],
						"outputs": [
							{
								"referenceName": "RawLakeJSON",
								"type": "DatasetReference",
								"parameters": {
									"FileSystem": {
										"value": "lake",
										"type": "Expression"
									},
									"Directory": {
										"value": "@concat('raw','/',pipeline().parameters.DataSource,'/',pipeline().parameters.DataSourceType)",
										"type": "Expression"
									},
									"File": {
										"value": "@concat('raw','_',pipeline().parameters.DataSource,'_',pipeline().parameters.DataSourceType,'_',utcnow())",
										"type": "Expression"
									}
								}
							}
						]
					}
				],
				"parameters": {
					"BaseUrl": {
						"type": "string"
					},
					"RelativeUrl": {
						"type": "string"
					},
					"DataSource": {
						"type": "string"
					},
					"DataSourceType": {
						"type": "string"
					}
				},
				"folder": {
					"name": "Engineering"
				},
				"annotations": []
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/GithubToRawLake')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"activities": [
					{
						"name": "RESTToRawLake",
						"type": "ExecutePipeline",
						"dependsOn": [],
						"userProperties": [],
						"typeProperties": {
							"pipeline": {
								"referenceName": "RESTToRawLake",
								"type": "PipelineReference"
							},
							"waitOnCompletion": true,
							"parameters": {
								"BaseUrl": {
									"value": "@variables('BaseUrl')",
									"type": "Expression"
								},
								"RelativeUrl": {
									"value": "@variables('RelativeUrl')",
									"type": "Expression"
								},
								"DataSource": {
									"value": "@variables('DataSource')",
									"type": "Expression"
								},
								"DataSourceType": {
									"value": "@variables('DataSourceType')",
									"type": "Expression"
								}
							}
						}
					}
				],
				"variables": {
					"BaseUrl": {
						"type": "String",
						"defaultValue": "https://api.github.com/orgs/dotnet/repos"
					},
					"RelativeUrl": {
						"type": "String"
					},
					"DataSource": {
						"type": "String",
						"defaultValue": "github"
					},
					"DataSourceType": {
						"type": "String",
						"defaultValue": "repositories"
					}
				},
				"folder": {
					"name": "Marketing"
				},
				"annotations": []
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/pipelines/RESTToRawLake')]"
			]
		}
	]
}